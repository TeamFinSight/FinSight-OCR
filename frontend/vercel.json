{
  "version": 2,
  "name": "finsight-ocr-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "app.js": {
      "includeFiles": "dist/**"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}